<VBox fx:id="box" stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane alignment="CENTER" gridLinesVisible="true" stylesheets="@dark-theme.css">
