            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label stylesheets="@dark-theme.css" text="Игрок:" GridPane.halignment="RIGHT">
                <GridPane.margin>
                    <Insets right="8.0" />
                </GridPane.margin>
            </Label>
            <Label stylesheets="@dark-theme.css" text="Счёт:" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets right="8.0" />
                </GridPane.margin>
            </Label>
            <Label layoutX="10.0" layoutY="46.0" stylesheets="@dark-theme.css" text="Выстрелы:" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets right="8.0" />
                </GridPane.margin>
            </Label>
