                <GridPane.margin>
                    <Insets left="8.0" />
                </GridPane.margin>
            </Label>
            <Label fx:id="playerScoreLabel" layoutX="118.0" layoutY="16.0" stylesheets="@dark-theme.css" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="8.0" />
                </GridPane.margin>
            </Label>
            <Label fx:id="playerShotsLabel" layoutX="77.0" layoutY="16.0" stylesheets="@dark-theme.css" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="8.0" />
                </GridPane.margin>
            </Label>
        </children>
    </GridPane>
</VBox>
